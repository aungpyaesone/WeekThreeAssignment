<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NearByFragment"
    android:orientation="vertical"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shapeableImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/margin_medium_2"
                android:outlineProvider="bounds"
                android:scaleType="centerCrop"
                android:src="@drawable/westeen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
                app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
                android:drawableStart="@drawable/ic_bookmark_border_white_24dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_card_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:drawableStart="@drawable/ic_star_24dp"
                android:gravity="center"
                android:text="@string/_4_5_21_ratings"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
                app:layout_constraintStart_toStartOf="@+id/shapeableImageView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:background="@drawable/text_bg"
                android:padding="@dimen/margin_medium"
                android:text="@string/_99_day"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
                app:layout_constraintEnd_toEndOf="@+id/shapeableImageView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:text="@string/the_westeen"
                android:textColor="#E4090808"
                android:textSize="@dimen/text_regular_3x"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
                app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="Gulshan Circle 2, Dhaka"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_50_off"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_wifi_swimming"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:backgroundTint="@color/color_white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/second_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/margin_medium_2"
                android:outlineProvider="bounds"
                android:scaleType="centerCrop"
                android:src="@drawable/westeen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookmark_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                app:layout_constraintEnd_toEndOf="@+id/second_img"
                app:layout_constraintTop_toTopOf="@+id/second_img"
                android:drawableStart="@drawable/ic_bookmark_border_white_24dp" />

            <TextView
                android:id="@+id/rating_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_card_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:drawableStart="@drawable/ic_star_24dp"
                android:gravity="center"
                android:text="@string/_4_3_21_ratings"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/second_img"
                app:layout_constraintStart_toStartOf="@+id/second_img" />

            <TextView
                android:id="@+id/price_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:background="@drawable/text_bg"
                android:padding="@dimen/margin_medium"
                android:text="@string/_89_day"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/second_img"
                app:layout_constraintEnd_toEndOf="@+id/second_img" />

            <TextView
                android:id="@+id/txt_title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:text="@string/radisum"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_regular_3x"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/second_img"
                app:layout_constraintTop_toBottomOf="@+id/second_img" />

            <TextView
                android:id="@+id/description_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="@string/apirtport"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_title_two"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_two" />

            <TextView
                android:id="@+id/percent_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_buffet_dinner"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/description_two"
                app:layout_constraintEnd_toEndOf="@+id/second_img"
                app:layout_constraintTop_toTopOf="@+id/txt_title_two" />

            <TextView
                android:id="@+id/last_txt_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/free_wifi_swimming"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/percent_two"
                app:layout_constraintTop_toTopOf="@+id/description_two" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_white"
        android:layout_marginTop="@dimen/margin_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/second_img_three"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/margin_medium_2"
                android:outlineProvider="bounds"
                android:scaleType="centerCrop"
                android:src="@drawable/westeen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookmark_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                app:layout_constraintEnd_toEndOf="@+id/second_img_three"
                app:layout_constraintTop_toTopOf="@+id/second_img_three"
                android:drawableStart="@drawable/ic_bookmark_border_white_24dp" />

            <TextView
                android:id="@+id/rating_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_card_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:drawableStart="@drawable/ic_star_24dp"
                android:gravity="center"
                android:text="@string/_4_5_21_ratings"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/second_img_three"
                app:layout_constraintStart_toStartOf="@+id/second_img_three" />

            <TextView
                android:id="@+id/price_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:background="@drawable/text_bg"
                android:padding="@dimen/margin_medium"
                android:text="@string/_99_day"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/second_img_three"
                app:layout_constraintEnd_toEndOf="@+id/second_img_three" />

            <TextView
                android:id="@+id/txt_title_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:text="@string/the_westeen"
                android:textColor="#E4090808"
                android:textSize="@dimen/text_regular_3x"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/second_img_three"
                app:layout_constraintTop_toBottomOf="@+id/second_img_three" />

            <TextView
                android:id="@+id/description_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:text="@string/gulshan_circle_2_dhaka"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_title_three"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_three" />

            <TextView
                android:id="@+id/percent_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_50_off"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/description_three"
                app:layout_constraintEnd_toEndOf="@+id/second_img_three"
                app:layout_constraintTop_toTopOf="@+id/txt_title_three" />

            <TextView
                android:id="@+id/last_txt_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/free_wifi_swimming"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/percent_three"
                app:layout_constraintTop_toTopOf="@+id/description_three" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
</ScrollView>